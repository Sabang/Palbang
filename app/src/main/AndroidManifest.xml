        <activity
            android:name=".LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoardContentActivity"
            android:label="@string/title_activity_board_content" >
        </activity>
        <activity
            android:name=".BoardModifyActivity"
            android:label="@string/title_activity_board_modify" >
        </activity>
        <activity
            android:name=".BoardWriteActivity"
            android:label="@string/title_activity_board_write" >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="지도" >
        </activity>
        <activity
            android:name=".RoomActivity"
            android:label="방 보기" >
        </activity>
        <activity
            android:name=".sibal"
            android:label="@string/title_activity_sibal" >
        </activity>
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginInAppBrowserActivity"
            android:label="OAuth2.0 In-app" />
    </application>

</manifest>
